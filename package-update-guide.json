{
  "name": "hospital-management-system",
  "version": "1.0.0",
  "description": "نظام إدارة المستشفى",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5000 && electron .\"",
    "build-desktop": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-win": "npm run build && electron-builder --win --x64",
    "pack": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.hospitalmanagement.app",
    "productName": "نظام إدارة المستشفى",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.js",
      "!node_modules/.cache/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Hospital Management System"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "نظام إدارة المستشفى",
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico"
    },
    "publish": null
  }
}